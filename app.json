{
  "expo": {
    "name": "HomeCare",
    "slug": "homecare-demo",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "transparencyhome",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.transparencyhome",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We use the microphone for speech recognition",
        "NSSpeechRecognitionUsageDescription": "We transcribe your speech to text",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },

    "android": {
      "permissions": ["RECORD_AUDIO"],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.transparencyhome",
      "usesCleartextTraffic": true
    },

    "web": {
      "output": "static"
    },

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "owner": "bartttender"
  }
}
